{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  }
}
